{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "outDir": "../../dist/demo",
    "skipLibCheck": true,
    "lib": ["es6", "es2015", "dom"],
    "noImplicitAny": false,
    "baseUrl": "",
    "paths": {
      "unopinionated-angular-toolbox": [
        "../../dist/lib"
      ]
    }
  },
  
  "typeRoots": [
      "../../node_modules/@types"
  ],

  "exclude": [
    "**/*.spec.ts"
  ],

  "angularCompilerOptions": {
    "genDir": "../../dist/demo",
    "entryModule": "app/app.module#AppModule",
    "debug": true
  }
}